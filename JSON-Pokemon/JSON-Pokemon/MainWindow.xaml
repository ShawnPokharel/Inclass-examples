<Window x:Class="JSON_Pokemon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JSON_Pokemon"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="lstPokemon" HorizontalAlignment="Left" Height="309" VerticalAlignment="Top" Width="269" Margin="10,31,0,0"/>
        <Button x:Name="btnPokemon" Content="Submit" HorizontalAlignment="Left" Height="56" Margin="357,339,0,0" VerticalAlignment="Top" Width="152" Click="BtnPokemon_Click"/>
        <Label x:Name="lblPokemon" Content="Pokémon" HorizontalAlignment="Left" Height="50" Margin="297,31,0,0" VerticalAlignment="Top" Width="217" Background="White" FontSize="20" FontWeight="Bold" TextOptions.TextHintingMode="Fixed" FontFamily="SimSun"/>
        <Image x:Name="imgPokemon" HorizontalAlignment="Left" Height="329" Margin="514,31,0,0" VerticalAlignment="Top" Width="268"/>

    </Grid>
</Window>
